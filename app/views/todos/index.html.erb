<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<div id="todos">
  <table border=1 cellpadding=5>
  <tr>
    <th>Todo</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @todos.each do |todo| %>   
<tr>
<td>
    <%= todo.name %>
    </td><td>
    <%= todo.completed %>
    </td>
    <td>
      <%= link_to "Show this todo", todo %>
      </td></tr>
  <% end %>
  </table>
</div>

<%= link_to "New todo", new_todo_path %>
